        </div>
    </div>
    <div class="col-md-6">
        <div id="mapgaynespark"></div>

    </div>
</div>
<div class="row background-sep m-4">
</div>
<div class="row websiteContainerAttendance">
    <div class="col">
        <h1>Accomodations</h1>
    </div>
</div>
<div class="row mt-5 justify-content-center">
    @foreach (var PlaceToSleep in Model.PlaceToSleeps)
    {
