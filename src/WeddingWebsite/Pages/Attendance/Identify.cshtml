@page
@model WeddingWebsite.Pages.Attendance.IdentifyModel
@inject IViewLocalizer Localizer
@{
    Layout = "_SubLayout";
    ViewData["Title"] = "Identify";
}


<div class="row websiteContainerAttendance" data-color="">
    <div class="col">
        <div class="websiteFont__hero">
            @Localizer["ToConfirm"]
        </div>
    </div>
</div>

<div class="row">
    <div class="col">
        <form class="row g-3" method="post">
            <div class="col-sm-12 col-md-6">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="Input.Email" placeholder="@Localizer["email"]">
                @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary" asp-page-handler="coming">@Localizer["coming"]</button>
                <button type="submit" class="btn btn-primary" asp-page-handler="notcoming">@Localizer["notcoming"]</button>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>
